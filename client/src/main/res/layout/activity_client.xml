<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:background="#FF000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ClientActivity">

    <LinearLayout
        android:id="@+id/innerLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="12sp"
                android:layout_alignParentLeft="true"
                android:background="@color/color_selector"
                android:text="Login"
                android:textColor="@color/text_color" />



            <Button
                android:id="@+id/buttonLeave"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="12sp"
                android:layout_alignParentRight="true"

                android:background="@color/color_selector"
                android:text="Leave"
                android:textColor="@color/text_color" />
        </RelativeLayout>



        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:numColumns="16"
            tools:listitem="@layout/field_item" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/bal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:layout_toEndOf="@+id/buttonLeft"
                android:layout_toStartOf="@+id/buttonRight"
                android:textColor="#FFFFFF"
            android:textSize="12sp"
                />


            <Button
                android:id="@+id/buttonLeft"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="10sp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_background"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/left"
                android:textColor="@color/text_color"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/buttonUp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="10sp"
                android:layout_below="@+id/buttonLeft"
                android:layout_alignParentStart="true"
                android:layout_marginTop="14dp"
                android:background="@drawable/button_background"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/up"
                android:textColor="@color/text_color" />

            <Button
                android:id="@+id/buttonRight"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="10sp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_background"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/right"
                android:textColor="@color/text_color"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/buttonDown"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="10sp"
                android:layout_below="@+id/buttonRight"
                android:layout_alignParentRight="true"
                android:layout_marginTop="14dp"
                android:background="@drawable/button_background"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="@string/down"
                android:textColor="@color/text_color" />

            <Button
                android:id="@+id/buttonFire"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="10sp"
                android:layout_below="@+id/buttonUp"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/buttonLeft"
                android:background="@drawable/button_background"
                android:text="@string/fire"
                android:textColor="@color/text_color"
                tools:ignore="SmallSp" />
            <Button
                android:id="@+id/buttonEject"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textSize="10sp"
                android:layout_toRightOf="@id/buttonFire"
                android:layout_below="@id/buttonDown"
                android:layout_marginLeft="12dp"
                android:background="@drawable/button_background"
                android:text="EJECT"
                android:textColor="@color/text_color"
                tools:ignore="SmallSp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:padding="8dp">

            <!-- Soldier Health Bar, Icon, and Text -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <!-- Soldier Health Icon -->
                <ImageView
                    android:id="@+id/soldierHealthIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:src="@drawable/soldierhealth_icon" /> <!-- Replace with your soldier icon drawable resource -->

                <!-- Soldier Health Bar -->
                <ProgressBar
                    android:id="@+id/soldierHealthBar"
                    android:layout_width="100dp"
                    android:layout_height="22dp"
                    android:max="25"
                    android:progress="25"
                    android:indeterminate="false"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/health_bar"
                    android:layout_toRightOf="@id/soldierHealthIcon" />

                <!-- Soldier Health Value -->
                <TextView
                    android:id="@+id/soldierHealthValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/soldierHealthBar"
                    android:layout_alignTop="@id/soldierHealthBar"
                    android:text="25|25"
                    android:textColor="@color/text_color"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical" />
            </RelativeLayout>

            <!-- Tank Health Bar, Icon, and Text -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <!-- Tank Health Icon -->
                <ImageView
                    android:id="@+id/tankHealthIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tankhealth_icon" />

                <!-- Tank Health Bar -->
                <ProgressBar
                    android:id="@+id/tankHealthBar"
                    android:layout_width="200dp"
                    android:layout_height="28dp"
                    android:max="100"
                    android:progress="100"
                    android:indeterminate="false"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/health_bar"
                    android:layout_toRightOf="@id/tankHealthIcon" />

                <!-- Tank Health Value -->
                <TextView
                    android:id="@+id/tankHealthValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/tankHealthBar"
                    android:layout_alignTop="@id/tankHealthBar"
                    android:text="100|100"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:gravity="center_vertical" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
